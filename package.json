{
  "name": "color-panel",
  "version": "0.5.0",
  "description": "React Color Panel Component",
  "main": "build/Component.js",
  "scripts": {
    "deploy": "npm run lint && npm run test && npm run build && gh-pages -d build",
    "build": "webpack",
    "stats": "webpack --profile --json > stats.json",
    "start": "webpack-dev-server",
    "lint": "eslint . --ext .js --ext .jsx || true",
    "test": "jest --verbose"
  },
  "comments": {
    "scripts_lintings": "http://survivejs.com/webpack_react/linting_in_webpack/"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "react",
      "react-dom"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Deepblue129/color-panel"
  },
  "keywords": [
    "react-component",
    "react"
  ],
  "author": "Michael Petrochuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Deepblue129/color-panel/issues"
  },
  "homepage": "https://github.com/Deepblue129/color-panel",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.1",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-0": "^6.5.0",
    "clean-webpack-plugin": "^0.1.8",
    "css-loader": "^0.23.1",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.11.1",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^5.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.11.0",
    "html-webpack-plugin": "^2.7.2",
    "json-loader": "^0.5.4",
    "node-sass": "^3.4.2",
    "path": "^0.12.7",
    "postcss-loader": "^0.9.1",
    "precss": "^1.4.0",
    "react-hot-loader": "^1.3.0",
    "react-transform-hmr": "^1.0.2",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "stylelint": "^6.9.0",
    "stylelint-config-standard": "^10.0.0",
    "stylelint-loader": "^6.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.14.0",
    "webpack-node-externals": "^1.2.0"
  },
  "dependencies": {
    "react": "^15.2.1",
    "react-dom": "^15.2.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "__DEV__": true
    },
    "env": {
      "browser": true
    },
    "rules": {
      "no-confusing-arrow": 0,
      "react/jsx-quotes": 0,
      "jsx-quotes": [
        2,
        "prefer-double"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  }
}
